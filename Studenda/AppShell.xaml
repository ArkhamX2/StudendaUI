<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Studenda.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:android="clr-namespace:Studenda.View.AndroidView"
    xmlns:local="clr-namespace:Studenda.View"
    BackgroundColor="{DynamicResource PanelColor}"
    HeightRequest="1034"
    Shell.TabBarIsVisible="False"
    WidthRequest="750">

    <ShellContent
        Title="Studenda"
        ContentTemplate="{DataTemplate android:LogInView}"
        FlyoutItemIsVisible="False"
        Route="LogInView"
        Shell.FlyoutBehavior="Disabled" />

    <ShellContent
        Title="Register"
        ContentTemplate="{DataTemplate android:SignUpView}"
        FlyoutItemIsVisible="False"
        Route="RegisterView"
        Shell.FlyoutBehavior="Disabled" />

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems" Route="ScheduleView">
        <ShellContent Title="ScheduleView" ContentTemplate="{DataTemplate android:ScheduleView}" />
        <ShellContent Title="ProfileView" ContentTemplate="{DataTemplate android:ProfileView}" />

    </FlyoutItem>

    <Shell.FlyoutFooter>
        <StackLayout>
            <Button Command="{Binding LogOutCommand}" Text="Выйти" />
        </StackLayout>
    </Shell.FlyoutFooter>

</Shell>
