<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Studenda.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Studenda.View"
    Shell.TabBarIsVisible="False"
    BackgroundColor="{DynamicResource PanelColor}"
    HeightRequest="1034"
    WidthRequest="750">

    <ShellContent FlyoutItemIsVisible="False" Shell.FlyoutBehavior="Disabled"
        Title="Studenda"
        ContentTemplate="{DataTemplate local:LogInView}"
        Route="LogInView" />

    <FlyoutItem Route="ScheduleView" FlyoutDisplayOptions="AsMultipleItems">
    <ShellContent
        Title="ScheduleView"
        ContentTemplate="{DataTemplate local:ScheduleView}"
         />
    <ShellContent
        Title="ProfileView"
        ContentTemplate="{DataTemplate local:ProfileView}"
         />
    </FlyoutItem>
    
    <Shell.FlyoutFooter>
        <StackLayout>
            <Button Text="Выйти" Command="{Binding LogOutCommand}"/>
        </StackLayout>
    </Shell.FlyoutFooter>
    
</Shell>
