<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Studenda.View.AndroidView.ScheduleView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="{DynamicResource MainWindowBackgroundColor}">
    <ScrollView>
        <VerticalStackLayout>
            <Grid x:Name="NavbarGrid" />

            <VerticalStackLayout x:Name="ScheduleLayout" />

            <Button
                Margin="30"
                BackgroundColor="{DynamicResource ButtonColor}"
                Command="{Binding GoToProfileViewCommand}"
                Style="{StaticResource AppButton}"
                Text="Profile"
                WidthRequest="340" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>