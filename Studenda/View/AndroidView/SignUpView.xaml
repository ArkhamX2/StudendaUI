<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Studenda.View.AndroidView.SignUpView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="SignUpView">
    <VerticalStackLayout>

        <VerticalStackLayout>
            <Label Text="Введите логин" />
            <Entry Placeholder="Логин" />
        </VerticalStackLayout>

        <VerticalStackLayout>
            <Label Text="Введите пароль" />
            <Entry IsPassword="True" Placeholder="пароль" />
        </VerticalStackLayout>

        <VerticalStackLayout>
            <Label Text="Повторите пароль" />
            <Entry IsPassword="True" Placeholder="Пароль" />
        </VerticalStackLayout>

        <VerticalStackLayout>
            <Label Text="№ Зачётной книжки" />
            <Entry Placeholder="Зачётная книжка" />
        </VerticalStackLayout>

        <HorizontalStackLayout>
            <CheckBox
                BackgroundColor="Black"
                HeightRequest="20"
                HorizontalOptions="Center"
                WidthRequest="20" />
            <Label Margin="0" Style="{StaticResource WhiteLabelTheme}" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>